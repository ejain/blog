              button(class="navbar-toggle", type="button", data-toggle="collapse", data-target="#main-navbar")
                  span.sr-only Toggle navigation
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
            a(class="navbar-brand", href=url_for())= config.title
            
